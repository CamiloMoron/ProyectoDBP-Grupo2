@{
}
<html>
<head>
    <meta charset="utf-8" />
    <title>Ver Productos</title>
</head>
<body>
    <form asp_controller="AdminMenu" asp-action="editarProducto" method="post">
        <input type="hidden" asp-for="IdProducto" value="@Model.IdProducto" />
        Nombre Producto<input type="text" asp-for="NombreProducto" placeholder="Ingrese un nombre" /><br />
        Descripción<input type="text" asp-for="Descripcion" placeholder="Ingrese una descripción" /><br />
        Precio<input type="text" asp-for="Precio" placeholder="Ingrese el precio" /><br />
        Stock<input type="text" asp-for="Stock" placeholder="Ingrese el stock" /><br />
        Id Categoria<input type="text" asp-for="IdCategoria" placeholder="Ingrese el id de la categoría" /><br />
        <input type="submit" value="Editar" />
    </form>

    <form asp-controller="AdminMenu" asp-action="verProductos" method="post">
        <input type="submit" value="Cancelar"></input>
    </form>
</body>
</html>

